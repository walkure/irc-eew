{
    "name": "dev",
    "image": "alpine:3.17.0",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "username": "vscode"
        }
    },
    "containerUser": "vscode",
    "onCreateCommand": "sudo chmod +x ./.devcontainer/onCreateCommand.sh && sudo ./.devcontainer/onCreateCommand.sh",
    "postStartCommand": {
        "safe dir":["git","config","--global","--add","safe.directory","${containerWorkspaceFolder}"],
        "care crlf":["git","config","--global","core.autocrlf","input"]
    },
    "extensions": [
        "ms-azuretools.vscode-docker",
        "bscan.perlnavigator"
    ],
    "remoteEnv": {
        "TZ": "Asia/Tokyo",
        "PERL5LIB":"${containerWorkspaceFolder}/lib",
        "EEW_DATA_DIR":"${containerWorkspaceFolder}/eewlog"
    },
    "settings": {
        "terminal.integrated.profiles.linux": {
            "bash": {
                "path": "/bin/bash"
            }
        },
        "terminal.integrated.defaultProfile.linux": "bash"
    }
}
